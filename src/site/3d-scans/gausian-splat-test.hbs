<script type="importmap">
  {
    "imports": {
      "three": "https://cdnjs.cloudflare.com/ajax/libs/three.js/0.170.0/three.module.js",
      "@mkkellogg/gaussian-splats-3d": "https://cdn.jsdelivr.net/npm/@mkkellogg/gaussian-splats-3d@0.4.5/build/gaussian-splats-3d.module.min.js"
    }
  }
</script>

<script type="module">
  import * as GaussianSplats3D from '@mkkellogg/gaussian-splats-3d';
  import * as THREE from 'three';

  const viewer = new GaussianSplats3D.Viewer({
    'cameraUp': [0, -1, 0],
    'initialCameraPosition': [2.28965, -0.65471, 0.70603],
    'initialCameraLookAt': [0.07115, 0.14063, -0.06007],
    'sphericalHarmonicsDegree': 2
  });
  let path = '/assets/cletrac.ksplat';
  viewer.addSplatScene(path, {
    'progressiveLoad': true
  })
  .then(() => {
      viewer.start();
  });

</script>
